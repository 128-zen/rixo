    {{#each categories}}
      <div class="categories__item">
        <div class="categories__head">
          <h2 class="fade-in-up">{{name}}</h2>
          <div class="fade-in-up">
            <a class="button button-primary" href="{{url}}">{{t 'see_all_sections'}}</a>
          </div>
        </div>
        <div class="categories__sections">
          {{#each sections}}
            <div class="categories__section fade-in-up">
              <div>
                <h6><a href="{{url}}">{{name}}</a></h6>
                <ul>
