{{!-- Promoted Articles --}}
{{#if promoted_articles}}
  <section class="promoted-articles">
    <div class="container section">
      <div class="promoted-articles__head">
        <h2 class="fade-in-up">{{settings.fourth_section_heading}}</h2>
        <div class="fade-in-up">
          <a class="button button-primary" href="{{settings.fourth_section_button_link}}">{{settings.fourth_section_button}}</a>
        </div>
      </div>
      <div class="promoted-articles__items">
        {{#each promoted_articles}}
          <div class="promoted-articles__item fade-in-up">
            <div>
              <img src="{{author.avatar_url}}">
              <div class="meta-group">
                {{#is created_at edited_at}}
                  <p class="meta-data">{{date created_at timeago=true}}</p>
                {{else}}
                  <p class="meta-data">{{date edited_at timeago=true}}</p>
                {{/is}}
              </div>
            </div>
            <h6><a href="{{url}}">{{title}}</a></h6>
            <div>{{body}}</div>
          </div>
        {{/each}}
      </div>
    </div>

  </section>
{{/if}}


